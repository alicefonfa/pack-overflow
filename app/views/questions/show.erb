<h1><%=@question.title%></h1>
<h3><%=@question.body%></h3>

  <div id='question_comment_container'><button id="new_question_comment_button">Question Comment</button></div>
  <div id='question_id'><%@question.id%></div>

<% if @question.best_answer %>
  <h4>Top answer:</h4>
  <h2><%= @question.best_answer.body %></h2>
  <h4><a href="/answer/<%=@question.best_answer.id%>/comments/new">Add comment</a></h4>
  <%@question.best_answer.comments.each do |comment|%>
  <h4><%=comment.body%></h4>
  <%end%>
<% end %>

<!-- print in order of upvotes -->
<%@question.answers.each do |answer|%>
  <% if !answer.is_best? %>
    <div><%= answer.body %></div>
  	<h4><a href="/answer/<%=answer.id%>/comments/new">Add comment</a></h4>
  <% end %>
<% end %>

